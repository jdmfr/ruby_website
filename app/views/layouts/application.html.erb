<!DOCTYPE html>

<html lang="en">
  <head>
    <title>FinalDesign</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="container-fluid">
        <%= render "common/navbar" %>
        <div class="row">
          <div class="col-md-9">
            <%= yield %>
          </div>

          <div class="col-md-3">
            <div class="list-group">
              <%= link_to "All items", products_url , :class =>"list-group-item list-group-item-action" %>
              <div class="list-group-item font-weight">
                <h4>Category</h4>
              </div>
                <% Category.all.each do |cate| %>

               <%= link_to cate.name, products_url(category: cate.id) ,:class=> "list-group-item list-group-item-action" %>
               <% end %>
              <div class="list-group-item font-weight">
               <h4>Provider</h4>
              </div>
                <% Provider.all.each do |prov| %>

               <%= link_to prov.name, products_url(provider: prov.id) ,:class=> "list-group-item list-group-item-action" %>
               <% end %>

            </div>
          </div>
        </div>
        <%= render "common/footer" %>

    </div>
  </body>

</html>

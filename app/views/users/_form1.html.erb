<div class="text-center">
    <div class="form-signin">
      <%= form_with(model: user, local: true) do |form| %>
        <% if user.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>
            <ul>
            <% user.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
            </ul>
          </div>
        <% end %>
      <h1 class="h3 mb-3 font-weight-normal">Please Type in </h1>

      <%= form.text_field :name ,  :class => "form-control" , :placeholder => "Username"%>
      <%= form.password_field :password ,:class =>"form-control" ,:placeholder => "Password"%>
      <%= form.password_field :password_confirmation ,:class =>"form-control" ,:placeholder => "Password Conformation"%>
      
      <%= form.text_field :phone  ,:class =>"form-control" ,:placeholder => "Phone"%>
      <%= form.text_field :address  ,:class =>"form-control" ,:placeholder => "Address"%>
      <div class="checkbox mb-3">
      </div>
      <%=form.submit "Submit", :class => "btn btn-lg btn-primary btn-block" %>
      <%= link_to 'Back', root_url,:class => "btn btn-sm btn-block"%>
      <% end %>
      
    </div>
</div>
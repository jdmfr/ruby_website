<%= form_with(model: order, local: true, class:  "form-row" )  do |form| %>
    
      <% if order.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(order.errors.count, "error") %> prohibited this order from being saved:</h2>

        <ul>
        <% order.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
      <%end%>
<div class="container">
    <div class="py-5 text-center">
        <img class="d-block mx-auto mb-4" src="https://getbootstrap.com/assets/brand/bootstrap-solid.svg" alt="" width="72" height="72">
        <h2>Checkout form</h2>
    </div>

    <div class="row">
    <div class="form-group col-md-6">
      <label for="inputName4">Name</label>
      <%= form.text_field :name ,  :class => "form-control" , :placeholder => "Username"%>
    </div>


      <div class="form-group col-md-6">
        <label for="inputEmail4">Email</label>
        <%= form.text_field :email ,  :class => "form-control" , :placeholder => "email"%>
      </div>

    </div>

    <div class="row">
    <div class="form-group col-md-12">
      <label for="inputAddress4">Address</label>
      <%= form.text_field :address ,  :class => "form-control" , :placeholder => "Address"%>
    </div>
    </div>

    <div class="row">
      <div class="form-group col-md-6">
        <label for="inputPhone4">Phone</label>
        <%= form.text_field :phone  ,:class =>"form-control" ,:placeholder => "Phone"%>
      </div>

      <div class="form-group col-md-4">
        <label for="inputType4">Pay_type</label><br>
        <%= form.select :pay_type , Order.pay_types.keys, prompt: 'Select a payment method', :class=> "form-control" %>
      </div>
      <div class="form-group col-md-2">
      </div>
    </div>

    <div class="py-5 text-center">
      <%=form.submit "Submit", :class => "btn btn-primary" %><br>
      <%= link_to 'Back', "history.go(-1)" %>
    </div>
    <% end %>
    
      
</div>
